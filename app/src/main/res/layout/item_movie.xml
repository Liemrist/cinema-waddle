<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageView
        android:id="@+id/image_poster"
        android:layout_width="@dimen/poster_width"
        android:layout_height="@dimen/poster_height"
        app:srcCompat="@drawable/ic_no_poster"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_poster"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/image_poster"
        android:layout_toStartOf="@+id/image_tmdb"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        tools:text="TextViewmasd'f;lkas'fd;lkas';dlfqweqweqweqweqweqweqweqweqweqweqweka's;dlfa's;ldkf'as;dlfka's;dlfka's;dlf"/>

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/image_poster"
        tools:text="TextView"/>

    <ImageView
        android:id="@+id/image_tmdb"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/text_title"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/text_rating"
        app:srcCompat="@drawable/ic_tmdb_logo_208x226_green"/>

    <TextView
        android:id="@+id/text_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_tmdb"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        tools:text="9.9"/>

    <ImageView
        android:id="@+id/image_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_poster"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/ic_heart_outline_grey600_24dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_flag_outline_grey600_24dp"
        android:layout_alignBottom="@+id/image_poster"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/image_poster"/>
</RelativeLayout>